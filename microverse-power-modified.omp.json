{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#3A86FF",
          "properties": {
            "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}} "
          },
          "style": "plain",
          "type": "os"
        },
        {
          "background": "#242424",
          "foreground": "cyan",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "template": "{{ if .Root }} <#f1184c>\uf0e7\uf0e7\uf0e7{{ end }} {{ .UserName }}{{ if .Root }} \uf0e7\uf0e7\uf0e7</> {{ end }}<darkGray>@</><#FFBB00>{{ .HostName }}</>"
          },
          "style": "powerline",
          "type": "session"
        },
        {
          "background": "#242424",
          "foreground": "#33DD2D",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "style": "full",
            "template": "\ue5ff {{ .Path }} "
          },
          "style": "powerline",
          "type": "path"
        },
        {
          "background": "#242424",
          "foreground": "#3A86FF",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "fetch_stash_count": true,
            "fetch_upstream_icon": true,
            "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }} "
          },
          "style": "powerline",
          "type": "git"
        },
        {
          "background": "#33DD2D",
          "background_templates": [
            "{{ if gt .Code 0 }}#f1184c{{ end }}"
          ],
          "foreground": "#242424",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "always_enabled": true,
            "template": " \ufc8d "
          },
          "style": "powerline",
          "type": "exit"
        },        
        {
          "background": "#242424",
          "foreground": "darkGray",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "always_enabled": true,
            "template": "\ufbab {{ .FormattedMs }}",
            "time_format": "15:04:05 2006-01-02"
          },
          "style": "powerline",
          "type": "executiontime"
	},
        {
          "background": "#242424",
          "foreground": "darkGray",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "template": "\uf64f {{ .CurrentDate | date .Format }} ",
            "time_format": "15:04:05 2006-01-02"
          },
          "style": "powerline",
          "type": "time"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#f1184c",
          "properties": {
            "template": "# "
          },
          "style": "plain",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 1
}
